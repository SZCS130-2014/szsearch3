<!-- BEGIN PAGINATION -->
				<div>
					<% if !@results['numFound'].nil? %>
						<ul class="pagination">
							<li class="disabled"><a href="#">&laquo;</a></li>

							<% for i in @start..@end %>
								<% if i == @current %>
		  							<li class="current"><a href="#"><%= i %></a></li>
		  						<% else %>
		  							<li><a href="#"><%= i %></a></li>
		  						<% end %>
		  					<% end %>

		  					<li><a href="#">&raquo;</a></li>
				 		</ul>

					<% end %>
				</div>
				<!-- END PAGINATION -->
