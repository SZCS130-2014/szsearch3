<?xml version="1.0" encoding="UTF-8" ?>
<dataConfig>
	<dataSource type="FileDataSource" encoding="UTF-8"/>
	<document>
		<entity name="product" processor="XPathEntityProcessor" stream="true" forEach="products/product" url="dataset.xml">
			<field column="PID" xpath="/products/product/@PID"/>
			<field column="ProductTitle" xpath="/products/product/ProductTitle"/>
			<field name="Review" xpath="/products/product/comments/comment/@Value"/>
			<field name="Rating" xpath="/products/product/comments/comment/@Rating"/>
			<field name="ReviewTitle" xpath="/products/product/comments/comment/@ReviewTitle"/>
		</entity>
	</document>
</dataConfig>